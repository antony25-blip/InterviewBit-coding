class Solution:
    # @param A : list of integers
    # @param B : list of integers
    # @return an integer
    def coverPoints(self, A, B):
        step=0
        i=1
        if len(A)>1:
            while i<len(A):
                sum1=A[i]-A[i-1]
                sum2=B[i]-B[i-1]
                i+=1
                z=max([abs(sum1),abs(sum2)])
                step=step+z
        return step 
